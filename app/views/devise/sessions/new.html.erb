<div class="col-xs-12 col-md-6 col-md-offset-3">
  <br /><br />
  <div class='game-list-item'>
    <h2><strong>Log in</strong></h2>
    <div class = 'text-left'>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	<div class="form-group">
	  <br>
	  <%= f.email_field :email, placeholder: 'Email Address', autofocus: true, :class => "form-control" %>
	</div>
	<div class="form-group">
	  <br>
	  <%= f.password_field :password, placeholder: 'Password', autocomplete: "off", :class => "form-control" %>
	</div>
	<% if devise_mapping.rememberable? -%>
	  <div class="form-group">
	    <%= f.check_box :remember_me %>&nbsp;
	    <%= f.label :remember_me %>
	  </div>
	<% end -%>
	<div class="text-right actions">
	  <%= f.submit "Log in", :class => "btn btn-primary" %>&nbsp;&nbsp;<%= render "devise/shared/links" %>
	</div>
	<br />
      <% end %>
    </div>
  </div>
</div>


<br />
<div class="container col-xs-12">
  <section class="my-games">
  <h2>CHOOSE YOUR DESTINATION</h2>
  <table id= "table_id", class = "chess-board">

    <% @board.board.each_with_index do |row, y| %>
      <tr>
	   <% row.each_with_index do |column, x| %>

       <!-- draw td data and piece glyphs -->
	     <td data-x = <%= x %>, data-y = <%= y %>, class = "text-center chess-square">
       <% glyph = @board.piece_glyphs(y, x) %>
       <% if glyph != nil && piece.game.current_player==piece.player_id %>
       <%= link_to glyph, move_piece_path( game_id: @game.id,
        y_position: y,
        x_position: x), :method => :post %>
      <% else %>
        <%= link_to '#',
        {controller: 'pieces',
         action: 'select_piece',
         game_id: @game.id,
         y_position: y,
         x_position: x}, :method => :post %>
	     </td>
        <% end %>
	     <% end %>
      </tr>
    <% end %>

  </table>
</section>
</div>

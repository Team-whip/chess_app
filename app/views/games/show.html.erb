<br />
<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1 class="text-center"><%= @game.name %></h1>

  <table id= "table_id", class = "chess-board">

    <% @board.board.each_with_index do |row, y| %>
      <tr>
	   <% row.each_with_index do |column, x| %>

       <!-- draw td data and piece glyphs -->     
	     <td data-x = <%= x %>, data-y = <%= y %>, data-name="edward", class = "text-center chess-square" id = "pieces">
       <% glyph = @board.piece_glyphs(y, x) %>
       <% if glyph != nil %>
       <%= link_to glyph, '#' %>
      <% else %>
        <%= link_to '#' %>
      <% end %>
	     </td>
        
	     <% end %>
      </tr>
    <% end %>

  </table>

  <script>
    $('td').click(function() {
      alert($( this ).dataset.x);
    });
  </script>

</div>

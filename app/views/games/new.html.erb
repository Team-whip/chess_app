<div class = 'container-responsive'>
  <div class = 'col-xs-12 col-md-6 col-md-offset-3'>
    <div id = 'startGame' class="game-list-item text-center ">
      <h1>Start a Game</h1>
      <%= simple_form_for @game, :url => games_path do |f| %>
	<br />
	<%= f.input :name, label: false, placeholder: 'Game Name' %>
	<br />
	<%= f.submit "Create", :class => 'btn btn-primary pull-right' %>
	<br />
      <% end %>
      <br />
    </div>
  </div>
</div>
